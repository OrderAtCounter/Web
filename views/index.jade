!!! 5
html
  head
    include bootstrap
    link(rel='stylesheet', href='/stylesheets/index.css')
  body
    include nav
    div.container
      div.row
        div.col-md-4.col-xs-12#newOrderColumn
          div#newOrderTitle Add New Order
          div#newOrderBox
            div.newOrderSubtitles New Order Number
            input.newOrderInputs#orderInput(type='text', placeholder=' # 1', name='order')
            div.newOrderSubtitles Phone Number
            input.newOrderInputs#phoneNumberInput(type='text', placeholder=' (404) - 555 - 5555', name='phoneNumber')
            button#newOrderButton ADD TO ACTIVE ORDERS
        div.col-md-7.col-xs-12#activeOrdersColumn
          div#activeOrdersTitle Active Orders
          div#activeOrdersBox
            for order in orders
              div.order
                div.row
                  div.col-md-3.col-xs-12
                    div.orderNumber='#' + order.orderNumber
                  div.col-md-4.col-xs-12
                    div.row
                      div.col-md-1.col-xs-1
                        img(src='/images/phone-number.png', alt='phone')
                      div.col-md-9.col-xs-10
                        div.phoneNumber #{order.phoneNumber}
                    div.row
                      div.col-md-1.col-xs-1
                        img(src='/images/clock.png', alt='clock')
                      div.col-md-9.col-xs-10
                        div.phoneTimestamp #{order.timestamp}
                  div.col-md-5.col-xs-12
                    button.readyButton READY?
    script(type='text/javascript', src='/javascripts/index.js')
    script(type='text/javascript', src='/javascripts/nav.js')